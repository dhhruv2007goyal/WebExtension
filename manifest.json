{
  "manifest_version": 3,
  "name": "BuriBuriZaemon",
  "version": "1.0",
  "description": "Simplifies actions",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "sidePanel", 
    "tabs",
    "windows",
    "scripting",
    "activeTab"
  ],

  "background": {
        "service_worker": "background.js"  
    },
  "host_permissions": [
        "http://localhost:5000/*",
        "<all_urls>"
    ],


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scroller.js"],
      "run_at": "document_idle"
    }
  ],

  "side_panel": {
    "default_title": "Gesture Monitor",
    "default_path": "mypage.html"
  },

  "action": {
    "default_title": "Click to open Gesture Monitor"
  }
}